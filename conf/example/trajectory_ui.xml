<maps>
	<map type="options" name="Trajectory_ColorOptions">
		<ifoptions op="Trajectory_interactive_plot" href="#Trajectory_Options" />
	</map>
	<map type="ops" name="Trajectory_Operations">
        <ifmenu view="xy" href="#Trajectory_operations_XY"/>
