<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>

  <appender name="las" class="org.apache.log4j.ConsoleAppender">
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="LAS %d{yyyy-MM-dd'T'HH:mm:ss.SSS Z} %-5p - %c{1} - %m%n"/>
    </layout>
  </appender>

  <logger name="gov.noaa.pmel.tmap" additivity="false">
    <level value="INFO"/>
    <appender-ref ref="las"/>
  </logger>

  <root>
    <level value="WARN"/>
    <appender-ref ref="las"/>
  </root>

</log4j:configuration>